<div class="resource-full-card" style="width: 24rem">
  <div class="card-body">
    <h2><%= resource.title %></h2>
    <p><%= resource.description %></p>

    <% if (links && links.length > 0) { %>
    <h4>Link:</h4>
    <p>
      <a href="<%= links[0].url %>" target="_blank" rel="noopener noreferrer">
        <%= links[0].name %>
      </a>
    </p>
    <% } %> <% if (topics && topics.length > 0) { %>
    <h4>Topic:</h4>
    <p><%= topics[0].topic_name %></p>
    <% } %>
  </div>

  <div class="card-footer">
    <span>Posted by: <%= resource.author %></span>

    <div class="card-actions">
      <button id="edit-btn">Edit</button>
      <button id="delete-btn">Delete</button>
      <button id="return-btn">Return to Resources</button>
    </div>
  </div>
</div>
